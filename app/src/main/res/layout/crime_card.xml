<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_news"
        android:layout_gravity="center"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cv_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/cv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cv_title"
                android:layout_below="@+id/cv_title"
                android:text="TextView" />

            <TextView
                android:id="@+id/cv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cv_image"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/cv_image"
                android:text="TextView" />

            <TextView
                android:id="@+id/cv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cv_time"
                android:layout_below="@+id/cv_time"
                android:layout_marginTop="13dp"
                android:text="TextView" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>